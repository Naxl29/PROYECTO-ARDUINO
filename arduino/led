#include <Wire.h>
#include <LiquidCrystal_I2C.h>

// Configuración del LCD
LiquidCrystal_I2C lcd(0x27, 20, 4); // Dirección I2C 0x27, 20 columnas y 4 filas

// Definición de pines
const int ledVerde = 13;
const int btnVerde = 5;
int estadoVerde = LOW;


void setup() {
  pinMode(ledVerde, OUTPUT);
  pinMode(btnVerde, INPUT_PULLUP);
  digitalWrite(ledVerde, estadoVerde);o
}

void loop() {
  // BOTÓN VERDE
  if (digitalRead(btnVerde) == LOW) {
    delay(200);
    estadoVerde = !estadoVerde;
    digitalWrite(ledVerde, estadoVerde);
    actualizarLCD();
    while (digitalRead(btnVerde) == LOW);
  }

}

void actualizarLCD() {
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("LED Verde: ");
  lcd.print(estadoVerde == HIGH ? "ON " : "OFF");


}
